<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Your Lists</h1>
    <%= link_to 'Create New List', new_list_path,
        class: "bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded" %>
  </div>

  <div class="grid gap-4">
    <% @lists.each do |list| %>
      <div class="border p-4 rounded-lg shadow hover:shadow-md transition-shadow">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold">
            <%= link_to list.name, list_path(list), class: "hover:text-blue-600" %>
          </h2>

          <div class="flex gap-2">
            <%= link_to 'Edit',
                edit_list_path(list),
                class: "text-blue-500 hover:text-blue-700" %>

            <%= button_to 'Delete',
                list_path(list),
                method: :delete,
                class: "text-red-500 hover:text-red-700",
                form: {
                  data: {
                    turbo_confirm: "Are you sure you want to delete this list?"
                  }
                } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @lists.empty? %>
    <div class="text-center py-8 text-gray-600">
      <p>You don't have any lists yet.</p>
    </div>
  <% end %>
</div>
